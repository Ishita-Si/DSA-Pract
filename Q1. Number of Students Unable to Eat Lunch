class Solution {
public:
    int countStudents(vector<int>& students, vector<int>& sandwiches) {
        int n = students.size();
        int arr[2] = {0};

        for(int st : students){
            arr[st]++;
        }
        for(int i = 0; i < n; i++){
            int sd = sandwiches[i];

            if(arr[sd] == 0){
                return n-i;
            }
            arr[sd]--;
        }
        return 0;
    }
};
